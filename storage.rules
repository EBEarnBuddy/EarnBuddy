rules_version = '2';
service firebase.storage {
  match /b/{bucket}/o {
    // Allow all authenticated users to read and write profile photos
    match /profiles/{userId}/{fileName} {
      allow read: if true; // Anyone can read profile photos
      allow write: if request.auth != null; // Any authenticated user can write
    }

    // Allow all authenticated users to read and write general images
    match /images/{userId}/{fileName} {
      allow read: if true;
      allow write: if request.auth != null;
    }

    // Allow all authenticated users to read and write any file
    match /{allPaths=**} {
      allow read, write: if request.auth != null;
    }
  }
}